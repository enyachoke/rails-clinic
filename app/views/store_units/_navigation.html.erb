<div class="btn-group">

  <% 
    @default_class = "btn btn-default btn-sm" 
    @active_class = @default_class + " active"
  %>

  <%= link_to store_units_path, class: (active == :index ? @active_class : @default_class ), role: 'button' do %>
    <span class="glyphicon glyphicon-list" aria-hidden="true"></span> <%= t 'store_units.index.title' %>
  <% end %>
  <%= link_to new_store_unit_path, class: (active == :new ? @active_class : @default_class ), role: 'button' do %>
    <span class="glyphicon glyphicon-file" aria-hidden="true"></span> <%= t 'store_units.new.title' %>
  <% end %>

  <% if defined?(@store_unit) && !@store_unit.new_record? %>
    <%= link_to store_unit_path(@store_unit), class: (active == :show ? @active_class : @default_class ), role: 'button' do %>
      <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> <%= t 'store_units.show.title' %>
    <% end %>
    <%= link_to edit_store_unit_path(@store_unit), class: (active == :edit ? @active_class : @default_class ), role: 'button' do %>
      <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> <%= t 'store_units.edit.title' %>
    <% end %>
  <% end %>
</div>