  
<h3><%= t '.title' %> <small><%= t '.sub_text' %></small></h3>
<%= link_to new_exam_path(customer_id: @customer.id), class: 'btn btn-primary', role: 'button' do %>
  <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> <%= t '.prepare_exam' %>
<% end %>

<%= link_to '#', class: 'btn btn-info', role: 'button' do %>
  <span class="glyphicon glyphicon-print" aria-hidden="true"></span> <%= t '.print_id_card' %>
<% end %>
<hr>

<div class="panel panel-primary">
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-2">
        <%= label :customer, :name %>:
      </div>
      <div class="col-sm-4">
        <%= "#{@customer.prefix.name} #{@customer.name} #{@customer.surname}" %>
      </div>
      <div class="col-sm-2">
        <%= label :customer, :sex %>:
      </div>
      <div class="col-sm-4">
        <%= @customer.sex %>
      </div>    
    </div>
    <div class="row">
      <div class="col-sm-2">
        <%= label :customer, :birthdate %>:
      </div>
      <div class="col-sm-4">
        <%= @customer.birthdate %>
      </div>
      <div class="col-sm-2">
        <%= label_tag nil, t('.age') %>:
      </div>
      <div class="col-sm-4">
        <%= age_text(@customer) %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2">
        <%= label :customer, :id_card_no %>:
      </div>
      <div class="col-sm-4">
        <%= @customer.id_card_no %>
      </div>
      <div class="col-sm-2">
        <%= label :customer, :passport_no %>:
      </div>
      <div class="col-sm-4">
        <%= @customer.passport_no %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2">
        <%= label :customer, :occupation %>:
      </div>
      <div class="col-sm-10">
        <%= @customer.occupation %>
      </div>
    </div>
  </div>
</div>

<div class="panel panel-primary">
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-2">
        <%= label :customer, :address %>:
      </div>
      <div class="col-sm-10">
        <%= @customer.address %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2">
        <%= label :customer, :sub_district %>:
      </div>
      <div class="col-sm-10">
        <%= @customer.sub_district %>
      </div>      
    </div>
    <div class="row">
      <div class="col-sm-2">
        <%= label :customer, :district %>:
      </div>
      <div class="col-sm-2">
        <%= @customer.district %>
      </div>
      <div class="col-sm-2">
        <%= label :customer, :province %>:
      </div>
      <div class="col-sm-2">
        <%= @customer.province %>
      </div>
      <div class="col-sm-2">
        <%= label :customer, :postal_code %>:
      </div>
      <div class="col-sm-2">
        <%= @customer.postal_code %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2">
        <%= label :customer, :home_phone_no %>:
      </div>
      <div class="col-sm-4">
        <%= @customer.home_phone_no %>
      </div>
      <div class="col-sm-2">
        <%= label :customer, :tel_no %>:
      </div>
      <div class="col-sm-4">
        <%= @customer.tel_no %>
      </div>          
    </div>    
  </div>
</div>

