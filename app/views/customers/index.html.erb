<div class="page-header">
  <h1><%= t '.title' %> <small><%= t '.sub_text' %></small></h1>
</div>

<div class="table-responsive">
	<table class="table table-striped table-hover">
	  <thead>
	    <tr>
	      <th>#</th>
	      <th><%= label :customer, :prefix %></th>
	      <th><%= label :customer, :name %></th>
	      <th><%= label :customer, :surname %></th>
	      <th><%= label :customer, :sex %></th>
	      <th><%= label :customer, :birthdate %></th>
	      <th></th>
	    </tr>
	  </thead>
	  <tbody>
	  	<% @customers.each do |customer| %>	
	    <tr>
	      <th scope="row"><%= customer.id %></th>
	      <td><%= customer.prefix.name %></td>
	      <td><%= customer.name %></td>
	      <td><%= customer.surname %></td>
	      <td><%= customer.sex %></td>
	      <td><%= customer.birthdate %></td>
	      <td><%= link_to 'View', customer_path(customer) %> | <%= link_to 'Edit', edit_customer_path(customer) %></td>
	    </tr>
	    <% end %>
	  </tbody>
	</table>
</div>