<h3><%= t '.title' %> <small><%= t '.sub_text' %></small></h3>
<hr>

<%= search_form_for @q, html: { class: "form-horizontal" } do |f| %>
	<div class="form-group">
		<%= f.label :name_cont, "Name contains", class: 'col-sm-2 control-label' %>
		<div class="col-sm-4">
		<%= f.search_field :name_cont, class: 'form-control', placeholder: true %>
		</div>
		<div class="col-sm-6">
			<%= f.submit "Search", class: 'btn btn-primary' %>
		</div>
	</div>
<% end %>
<hr>

	<!--
	<%= content_tag :p, @customers.to_sql %>
	-->


<div class="table-responsive">
	<table class="table table-striped table-hover">
	  <thead>
	    <tr>
	      <th><%= sort_link(@q, :id, "#") %></th>
	      <th><%= sort_link(@q, :prefix_id, (t 'helpers.label.customer.prefix')) %></th>
	      <th><%= sort_link(@q, :name, (t 'helpers.label.customer.name')) %></th>
	      <th><%= sort_link(@q, :surname, (t 'helpers.label.customer.surname')) %></th>
	      <th><%= sort_link(@q, :sex, (t 'helpers.label.customer.sex')) %></th>
	      <th><%= sort_link(@q, :birthdate, (t 'helpers.label.customer.birthdate')) %></th>
	      <th></th>
	    </tr>
	  </thead>
	  <tbody>
	  	<% @customers.each do |customer| %>	
	    <tr>
	      <th scope="row"><%= customer.id %></th>
	      <td><%= customer.prefix.name %></td>
	      <td><%= customer.name %></td>
	      <td><%= customer.surname %></td>
	      <td><%= t('customers.show.' + customer.sex) %></td>
	      <td><%= customer.birthdate %> (<%= th_year customer %>)</td>
	      <td><%= link_to 'View', customer_path(customer) %> | <%= link_to 'Edit', edit_customer_path(customer) %></td>
	    </tr>
	    <% end %>
	  </tbody>
	</table>
</div>
<%= paginate @customers %>
<div>
<%= page_entries_info @customers, entry_name: t('layouts.application.customer') %>
</div>