<div class="btn-group form-group">
  <%= link_to customers_path, class: 'btn btn-default btn-sm', role: 'button' do %>
    <span class="glyphicon glyphicon-list" aria-hidden="true"></span> <%= t '.list_customer' %>
  <% end %>
  <%= link_to customer_path(@customer), class: 'btn btn-default btn-sm', role: 'button' do %>
    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> <%= t '.show_customer' %>
  <% end %>
</div>

<%= render partial: 'customer', locals: {customer: @customer} %>

<h3><%= t '.title' %> <small><%= t '.sub_text' %></small></h3>
<hr>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th><%= t 'helpers.label.exam.created_at' %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @exams.each do |exam| %> 
      <tr>
        <th scope="row"><%= exam.id %></th>
        <td><%= exam.created_at.to_s(:global_date) %> (<%= time_ago_in_words(exam.created_at)%>)</td>
        <td>
          <div class="btn-group">
            <%= link_to t('.show_exam'), exam_path(exam), class: "btn btn-default btn-sm" %>
            <%= link_to t('.add_to_q'), qs_path(exam_id: exam.id), method: :post, class: "btn btn-default btn-sm" %>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>