<div class="btn-group form-group">
  <%= link_to customers_path, class: 'btn btn-default btn-sm', role: 'button' do %>
    <span class="glyphicon glyphicon-list" aria-hidden="true"></span> <%= t '.list_customer' %>
  <% end %>
  <%= link_to customer_path(@customer), class: 'btn btn-default btn-sm', role: 'button' do %>
    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> <%= t '.show_customer' %>
  <% end %>
</div>

<%= render partial: 'customer', locals: {customer: @customer} %>

<div class="btn-group">
  <%= link_to new_exam_path(customer_id: @customer.id), class: 'btn btn-primary btn-sm', role: 'button' do %>
    <span class="glyphicon glyphicon-file" aria-hidden="true"></span> <%= t 'customers.show.new_exam' %>
  <% end %>
</div>

<h3><%= t '.title' %> <small><%= t '.sub_text' %></small></h3>
<hr>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th><%= t 'helpers.label.exam.created_at' %></th>
        <th></th>
      </tr>
    </thead>
    <tbody data-link="row" class="rowlink">
      <% @exams.each do |exam| %> 
      <tr>
        <td><%= link_to exam.id, exam_path(exam) %></td>
        <td><%= th_date_time_format exam.created_at %> (<%= time_ago_in_words(exam.created_at)%>)</td>
        <td class="rowlink-skip">
          <div class="btn-group">
            <%= link_to exam_path(exam), class: 'btn btn-default btn-sm', role: 'button' do %>
              <span class="glyphicon glyphicon-eye-open" data-toggle="tooltip" title="<%= t '.show_exam' %>" data-placement="bottom" aria-hidden="true"></span>
            <% end %>
            <%= link_to qs_path(exam_id: exam.id), method: :post, class: 'btn btn-default btn-sm', role: 'button' do %>
              <span class="glyphicon glyphicon-hourglass" data-toggle="tooltip" title="<%= t '.add_to_q' %>" data-placement="bottom" aria-hidden="true"></span>
            <% end %>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>