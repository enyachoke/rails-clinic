<div class="panel panel-info">
  <div class="panel-heading">
    <div class="panel-title pull-left"><%= t("exams.diags.diags.new_diag")%></div>
    <div class="panel-title pull-right">
      <a href="#"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
    </div>
    <div class="clearfix"></div>
  </div>
  <div class="panel-body">

<% if exams_diag.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <strong><%= t("error.cannot_save") %></strong>
    <ul>
      <% exams_diag.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for exam, url: create_exam_diag_path(exam), method: :post, remote: true,
  html: { class: "form-horizontal" }  do |exam_form| %>
  <%= exam_form.fields_for :exams_diags, exams_diag do |exams_diags_form| %>
    <div class="form-group">
      <%= exams_diags_form.label :diag_id, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= exams_diags_form.select :diag_id, 
          options_for_select(@diags.map{ |d| [d.name, d.id, {'data-subtext'=> d.description}] }, exams_diags_form.object.diag_id), {},
          class: "selectpicker form-control", data: { 'live-search' => true } %>
      </div>
    </div>
    <div class="form-group">
      <%= exams_diags_form.label :note, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= exams_diags_form.text_field :note, class: "form-control", placeholder: true %>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= exam_form.submit 'Create', class: "btn btn-info",
        data: { "disable-with" => "Saving..."} %>
    </div>
  </div>
<% end %>

  </div>
</div>