h3
  = t ".title"
  small = t ".sub_text"

hr

.form-group = render partial: "navigation", locals: { active: "edit" }

= render "global/alert", obj: @exam 

= render partial: 'weight_form', locals: {customer: @customer, exam: @exam}

.row
