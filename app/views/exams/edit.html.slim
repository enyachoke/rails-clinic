    = render partial: 'pe_form', locals: {exam: @exam}
  .col-sm-6
    = render partial: 'exams/diags/diags', locals: {exam: @exam}


.panel.panel-primary
  .panel-heading
    .panel-title
      | X
  .panel-body
    form.form-horizontal
      .form-group
        .col-sm-6 = collection_select(:drug_in, :drug_id, @drugs, :id, :name, {}, class: "selectpicker", data: { 'live-search' => true, "size" => 10 } )
        .col-sm-6 = link_to "See Drug In", drug_drug_ins_path(@drugs[0]), {id: "link_drug_drug_ins_path", class: "btn, btn-sm, btn-default", role: "button", remote: true, "data-disable-with" => "Loading..." }
