<%= content_tag :span, '', id: :pe_form, class: 'bookmark' %>
<div class="panel panel-primary">
  <div class="panel-heading">
    <div class="panel-title"><%= t ".header" %></div>
  </div>
  <div class="panel-body">
  <%= render partial: "flash", locals: {section: :pe_form } %>
  <%= form_for exam, html: { class: "form-horizontal", id: "exam_pi_form" }, data: { anchor: :pe_form } do |f| %>
    <div class="form-group">
      <%= hidden_field_tag 'section', :pe_form %>
      <%= f.label :exam_pi, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :exam_pi, class: "form-control", placeholder: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :exam_pe, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :exam_pe, class: "form-control", placeholder: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :exam_note, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :exam_note, class: "form-control", placeholder: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <%= render partial: "global/form_button", locals: {f: f} %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <%= f.button  name: "submit_and_stay", class: "btn btn-primary btn-labeled", value: "submit_and_stay" do |b| %>
          <span class="btn-label"><i class="glyphicon glyphicon-ok"></i></span><%=t('exams.weight_form.submit_and_stay_button')%>
        <% end %>
      </div>
    </div>
  <% end %>
  </div>
</div>