.panel.panel-default#examAppointmentList
  .panel-heading
    .panel-header 
      =t("exams.appointment.title")
      .pull-right
        
        - if policy(@exam).edit_appointment?
          = render partial: "global/panel/edit_btn", locals: { path: edit_exam_appointment_path(exam) }

        = render partial: "global/toggle_panel_button", locals: { target: "#examAppointmentListBody" }        
      .clearfix
  = render partial: "exams/appointment/list_table", locals: {exam: exam, table_id: "examAppointmentListBody"}