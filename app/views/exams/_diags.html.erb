<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t("exams.diag_form.heading") %></h3>
  </div>
  <div class="panel-body">
    <%= form_for @exam, url: new_exam_diag_path(@exam), method: :post, remote: :true, html: { class: "form-horizontal" } do |f| %>
      <div class="text-right">
      <%= f.submit 'New Diag', class: "btn btn-primary" %>
      </div>
      <div id="new_exam_diag_div"></div>
    <% end %>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>id</th>
            <th>order</th>
            <th>diag name</th>
            <th>note</th>
          </tr>
        </thead>
        <tbody>
          <% exam.exams_diags.each do |ed| %> 
          <tr>
            <th scope="row"><%= ed.id %></th>
            <td><%= ed.order %></td>
            <td><%= ed.diag.name %></td>
            <td><%= ed.note %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>