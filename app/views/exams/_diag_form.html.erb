<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t(".heading") %></h3>
  </div>
  <div class="panel-body">
    <div class="form-group">
      <%= label_tag 'diags', nil, class: "col-sm-2 control-label" %>
      <div class="col-sm-6">
        <%= select_tag 'diags', options_for_select( @diags.map{ |d| [d.name, d.id, {'data-subtext'=> d.description}] } ), class: "selectpicker" %>
      </div>
      <div class="col-sm-4">
        <%= button_tag 'Add row', type: "button",  class: "btn btn-primary" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
      <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%"
        <% if exam.id.present? %>
          data-url="<%= exams_diags_url(:exam_id => exam.id) %>"
        <% end %>
        >
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Note</th>
            </tr>
        </thead>
        </table>
        </div>  
    </div>
    <%= button_tag t('exams.weight_form.submit_button'), type: "button", class: "btn btn-primary" %>
    <%= button_tag t('exams.weight_form.clear_button'), type: "reset", class: "btn btn-default" %>
  </div>
</div>