<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t(".heading") %></h3>
  </div>
  <div class="panel-body">
    <form class="form-horizontal">
      <div class="form-group">
        <%= label_tag 'diags', nil, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= select_tag 'diags_select', options_for_select( @diags.map{ |d| [d.name, d.id, {'data-subtext'=> d.description}] } ), class: "selectpicker" %>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag "note", nil, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= text_field_tag "exams_diags_note_text", nil, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-4 col-sm-offset-8">
          <%= button_tag 'Add row', id: "exams_diags_add_row_btn", type: "button",  class: "btn btn-primary" %>
          <%= button_tag 'Clear', id: "exams_diags_clear_field_btn", type: "button",  class: "btn btn-default" %>
        </div>
      </div>
    </form>
    <div class="form-group">
      <div class="col-sm-12">
        <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%"
          <% if exam.id.present? %>
            data-url="<%= exams_diags_url(:exam_id => exam.id) %>"
          <% end %>
          >
          <thead>
              <tr>
                  <th>Id</th>
                  <th>Order</th>
                  <th>Name</th>
                  <th>Note</th>
              </tr>
          </thead>
        </table>
      </div>  
    </div>
    <%= button_tag t('exams.weight_form.submit_button'), id: "exams_diags_submit_btn", type: "button", class: "btn btn-primary" %>
    <%= button_tag t('exams.weight_form.clear_button'), type: "reset", class: "btn btn-default" %>
  </div>
</div>