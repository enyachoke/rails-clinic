<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t(".heading") %></h3>
  </div>
  <div class="panel-body">
  <%= form_for exam, html: { class: "form-horizontal" } do |f| %>
    <div class="form-group">
      <%= label_tag 'diags', nil, class: "col-sm-2 control-label" %>
      <div class="col-sm-6">
        <%= select_tag 'diags', options_for_select( @diags.map{ |d| [d.name, d.id, {'data-subtext'=> d.description}] } ), class: "selectpicker" %>
      </div>
      <div class="col-sm-4">
        <%= button_tag 'Add row', type: "button",  class: "btn btn-primary" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
      <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Note</th>
            </tr>
        </thead>
        </table>
        </div>  
    </div>
    <%= f.submit t('exams.weight_form.submit_button'), class: "btn btn-primary" %>
    <%= f.submit t('exams.weight_form.clear_button'), type: "reset", class: "btn btn-default" %>
  <% end %>
  </div>
</div>