<div class="form-group">
<%= render partial: "customers/navigation", locals: {active: "show" } %>
</div>
<%= render partial: 'customer', locals: {customer: @customer} %>
<h3><%= t '.title' %> <small><%= t '.sub_text' %></small></h3>
<hr>

<div class="form-group">
  <%= render partial: "navigation", locals: {active: "show"} %>
</div>

<div class="panel panel-primary">
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-1">
        <%= label :exam, :weight %>:
      </div>
      <div class="col-sm-1">
        <%= @exam.weight%>
      </div>
      <div class="col-sm-1">
        <%= label :exam, :height %>:
      </div>
      <div class="col-sm-1">
        <%= @exam.height %>
      </div>
      <div class="col-sm-1">
        <%= label_tag 'bmi', 'BMI' %>:
      </div>
      <div class="col-sm-1">
        <%= @exam.bmi %>
      </div>
      <div class="col-sm-2">
        <%= label_tag 'blood_pressure', t('exams.new.blood_pressure') %>:
      </div>
      <div class="col-sm-2">
        <%= @exam.bp_systolic %> / <%= @exam.bp_diastolic %>
      </div>
      <div class="col-sm-1">      
        <%= label :exam, :pulse %>:
      </div>
      <div class="col-sm-1">
        <%= @exam.pulse %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2">
        <%= label :exam, :drug_allergy %>:
      </div>
      <div class="col-sm-10">
        <%= @exam.drug_allergy %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2">
        <%= label :exam, :note %>:
      </div>
      <div class="col-sm-10">
        <%= @exam.note %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-6">

  </div>
  <div class="col-sm-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
          <div class="panel-title"><%= t("exams.diag_form.heading") %></div>
      </div>
      <div class="panel-body">
        <div id="new_exam_diag_div" style="display:none;"></div>
        <div id="exam_diags_list_div" class="table-responsive">

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Note</th>
    </tr>
  </thead>
  <tbody data-link="row" class="rowlink">
    <% @exam.exams_diags.each do |ed| %> 
    <tr>
      <td><%= ed.id %></td>
      <td><%= ed.diag.name %></td>
      <td><%= ed.note %></td>
    </tr>
    <% end %>
  </tbody>
</table>

        </div>
      </div>
    </div>
  </div>
</div>