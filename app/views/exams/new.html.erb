<div class="btn-group">
  <%= link_to customers_path, class: 'btn btn-default btn-sm', role: 'button' do %>
    <span class="glyphicon glyphicon-list" aria-hidden="true"></span> <%= t 'exams.index.list_customer' %>
  <% end %>
  <%= link_to customer_path(@customer), class: 'btn btn-default btn-sm', role: 'button' do %>
    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> <%= t 'exams.index.show_customer' %>
  <% end %>
</div>
<h3><%= t '.title' %> <small><%= t '.sub_text' %></small></h3>
<hr>

<% if @exam.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2>
      <%= pluralize(@exam.errors.count, "error") %> prohibited
      this exam from being saved:
    </h2>
    <ul>
      <% @exam.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= render partial: 'customer', locals: {customer: @customer} %>

<%= render partial: 'weight_form', locals: {customer: @customer, exam: @exam} %>

<%= render partial: 'exam_form', locals: {exam: @exam} %>