<%= render partial: "navigation", locals: {active: :index} %>
<h3><%= t '.title' %> <small><%= t '.sub_text' %></small></h3>
<hr>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th><%= sort_link @q, :id, "#" %></th>
        <th><%= sort_link @q, :code %></th>
        <th><%= sort_link @q, :text %></th>
        <th></th>
      </tr>
    </thead>
    <tbody data-link="row" class="rowlink">
      <% @drug_usages.each do |drug_usage| %>
      <tr>
        <td><%= drug_usage.id %></td>
        <td><%= drug_usage.code %></td>
        <td><%= drug_usage.text %></td>
        <td class="rowlink-skip">
          <div class="btn-group">
            <%= link_to drug_usage_path(drug_usage), class: 'btn btn-default btn-sm', role: 'button' do %>
              <span class="glyphicon glyphicon-eye-open" data-toggle="tooltip" title="View" data-placement="bottom" aria-hidden="true"></span>
            <% end %>
            <%= link_to edit_drug_usage_path(drug_usage), class: 'btn btn-default btn-sm', role: 'button' do %>
              <span class="glyphicon glyphicon-edit" data-toggle="tooltip" title="Edit" data-placement="bottom" aria-hidden="true"></span>
            <% end %>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @drug_usages %>
</div>
<hr>
<div>
<%= page_entries_info @drug_usages, entry_name: t('.title') %>
</div>