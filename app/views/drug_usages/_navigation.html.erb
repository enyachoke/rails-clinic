<div class="btn-group">

  <% 
    @default_class = "btn btn-default btn-sm" 
    @active_class = @default_class + " active"
  %>

  <%= link_to drug_usages_path, class: (active == :index ? @active_class : @default_class ), role: 'button' do %>
    <span class="glyphicon glyphicon-list" aria-hidden="true"></span> <%= t 'drug_usages.index.title' %>
  <% end %>
  <%= link_to new_drug_usage_path, class: (active == :new ? @active_class : @default_class ), role: 'button' do %>
    <span class="glyphicon glyphicon-file" aria-hidden="true"></span> <%= t 'drug_usages.new.title' %>
  <% end %>

  <% if defined?(@drug_usage) && !@drug_usage.new_record? %>
    <%= link_to drug_usage_path(@drug_usage), class: (active == :show ? @active_class : @default_class ), role: 'button' do %>
      <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> <%= t 'drug_usages.show.title' %>
    <% end %>
    <%= link_to edit_drug_usage_path(@drug_usage), class: (active == :edit ? @active_class : @default_class ), role: 'button' do %>
      <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> <%= t 'drug_usages.edit.title' %>
    <% end %>
  <% end %>
</div>